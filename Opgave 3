%% Opgave 3 del 1
clc
clear all
close all

N=10000;
alfabet=(-3 -1 +1 +3);

% genererer en vektor af +1 og -1
a=(2*randi(2,1,N)-3);

% genererer en vektor af alfabetet
a=a+a.*((2-randi(2,1,N))*2);

%% opgave 3 del 2

m=10;
a0=[a; zeros(m-1,N)];
a0=reshape(a0,1,N*m);

% Savtakpuls
g=(0:m-1)/m;
v=conv(g,a0);

% værdierne af v fra 1 til 500.
vTest=v(1:500);

% plotter savtakpuls med værdierne fra alfabetet.
figure
plot(vTest)
